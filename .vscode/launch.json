    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}\\src\\index.ts",
            "preLaunchTask": "compile",
            "sourceMaps": true,
            "smartStep": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "showAsyncStacks": false,
            "skipFiles": [
				"node_modules/**/*.js",
				"build/**/*.js"
            ]
        }
    ]
}